{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@types/telegram-web-app/index.d.ts"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/telegram-web-app/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}